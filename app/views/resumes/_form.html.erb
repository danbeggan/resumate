<%= form_with(model: resume, class: "contents") do |form| %>
  <% if resume.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(resume.errors.count, "error") %> prohibited this resume from being saved:</h2>

      <ul>
        <% resume.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= render Input::TextInputComponent.new(form: form, first_name: :first_name) %>
  </div>


  <div class="my-5">
    <%= render Input::TextInputComponent.new(form: form, last_name: :last_name) %>
  </div>

  <div class="my-5">
      <%= render Input::TextInputComponent.new(form: form, last_name: :email) %>   
  </div>

  <div class="my-5">
    <%= render Input::TextInputComponent.new(form: form, last_name: :address) %>
  
  </div>

  <div class="my-5">
    <%= render Input::TextInputComponent.new(form: form, last_name: :country) %>  
</div>

  <div class="my-5">
    <%= render Input::TextInputComponent.new(form: form, last_name: :city) %>
  </div>

  <div class="my-5">
    <%= render Input::TextInputComponent.new(form: form, last_name: :job_title) %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
